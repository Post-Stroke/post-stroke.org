---
import Layout from "../layouts/Layout.astro";
import HeadingGroup from "../components/HeadingGroup.astro";
---

<Layout title="One Last Step">
  <main class="relative flex-1 overflow-hidden">
    <div
      class="container relative z-10 flex flex-col items-center gap-4 py-[--container-padding-y] md:gap-7">
      <HeadingGroup class="items-center text-center" heading="One Last Stepâ€¦" />

      <img
        class="w-full max-w-[37.5rem] rounded-lg md:rounded-xl"
        src="/assets/images/one-last-thing.jpg"
        srcset="/assets/images/one-last-thing.jpg,
                    /assets/images/one-last-thing@2x.jpg 2x"
        alt="Elyse Newland in a tanktop smilling while pointing her finger to the top left"
        width="450"
        height="600"
        loading="lazy"
      />

      <p class="max-w-[40.625rem] text-balance text-center text-lg">
        Check your email to confirm your subscription. Talk to you soon!
      </p>
    </div>
    <!-- Circles -->
    <div
      class="absolute -bottom-[500px] -left-[250px] z-0 size-[700px] rounded-full border-2 border-border/50 max-md:hidden">
    </div>
    <div
      class="absolute -bottom-[400px] -left-[500px] z-0 size-[700px] rounded-full border-2 border-border/50 max-md:hidden">
    </div>
  </main>
</Layout>
