---
interface Props {
  title: string;
}

const { title } = Astro.props;
import { SITE_TITLE, SITE_DESCRIPTION, SITE_OG_IMG } from "../config";
import { SEO } from "astro-seo";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/base.css";
---

<!doctype html>
<html lang="en" class="bg-page text-body antialiased">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={SITE_DESCRIPTION} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/lite-youtube-embed/0.3.2/lite-yt-embed.js"
      integrity="sha512-jz/Yb/zgeKwLIPpS2y9ZaI6KBFQxKyOIhJQtv3MgQAhG0XvEkFskgXIkEeYYqmOIyeQLgTjyMR2BrBeaCUXCTA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
      defer></script>

    <SEO
      charset="UTF-8"
      title={title}
      titleTemplate="Post Stroke â€“ %s"
      titleDefault="Post Stroke - `${SITE_DESCRIPTION}`"
      description={SITE_DESCRIPTION}
      openGraph={{
        basic: {
          title: `${SITE_DESCRIPTION}` + " - Post Stroke",
          type: "website",
          image: `${SITE_OG_IMG}`,
        },
        optional: {
          description: `${SITE_DESCRIPTION}`,
        },
      }}
    />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <div
      id="maincontent"
      class="flex min-h-dvh flex-col pt-[--nav-item-height] lg:pl-[--nav-max-width] lg:pt-0">
      <slot />
      <Footer title={SITE_TITLE} />
    </div>
  </body>
</html>
